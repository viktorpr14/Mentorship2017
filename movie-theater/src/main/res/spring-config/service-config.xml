<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 				http://www.springframework.org/schema/util
 				http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<bean id="userService" class="com.epam.spring.core.movietheater.service.UserService"
		c:userDao-ref="userDao" />

	<bean id="eventService" class="com.epam.spring.core.movietheater.service.EventService">
		<constructor-arg ref="eventDao" />
	</bean>

	<bean id="ticketService" class="com.epam.spring.core.movietheater.service.TicketService">
		<constructor-arg ref="ticketDao" />
	</bean>

	<bean id="auditoriumService" class="com.epam.spring.core.movietheater.service.AuditoriumService">
		<constructor-arg ref="auditoriumDao" />
	</bean>
	
	<bean id="bookingService" class="com.epam.spring.core.movietheater.service.BookingService">
		<constructor-arg ref="auditoriumService" />
		<constructor-arg ref="ticketService"/>
		<constructor-arg ref="discountService"/>
	</bean>


</beans>