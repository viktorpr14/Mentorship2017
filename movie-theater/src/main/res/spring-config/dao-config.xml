<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
 	
 	<bean id = "userDao" class="com.epam.spring.core.movietheater.dao.UserDao"/>
	<bean id = "eventDao" class="com.epam.spring.core.movietheater.dao.EventDao"/>
	<bean id = "ticketDao" class="com.epam.spring.core.movietheater.dao.TicketDao"/>
	<bean id = "auditoriumDao" class="com.epam.spring.core.movietheater.dao.AuditoriumDao">
		<constructor-arg>
			<list>
				<ref bean="silverAuditorium"/>
			</list>
		</constructor-arg>
	</bean>

</beans>